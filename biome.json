{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noUselessCatch": "off"
			},
			"style": {
				"noParameterAssign": "off"
			}
		}
	},
	"files": {
		"ignore": [
			"node_modules/",
			"coverage/",
			".next/",
			"package-lock.json",
			"README.md",
			"LICENS"
		]
	}
}
